# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# DVC Google Drive Configuration
DVC_REMOTE_URL=gdrive://your-google-drive-folder-id-here
GDRIVE_USE_SERVICE_ACCOUNT=false

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=california-housing-prediction
MLFLOW_S3_ENDPOINT_URL=  # Optional: for S3-compatible storage

# Database Configuration
DATABASE_URL=sqlite:///./mlops_platform.db
# DATABASE_URL=postgresql://user:password@localhost:5432/mlops_platform  # Alternative PostgreSQL

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_LOG_LEVEL=info

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Monitoring Configuration
PROMETHEUS_PORT=8001
GRAFANA_PORT=3001

# Security (generate secure random keys for production)
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Development Settings
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# Docker Configuration
DOCKER_REGISTRY=your-registry-here
DOCKER_IMAGE_TAG=latest

# GitHub Actions Secrets (for CI/CD)
# DOCKER_USERNAME=your-docker-username
# DOCKER_PASSWORD=your-docker-password
# GDRIVE_SERVICE_ACCOUNT_JSON=your-service-account-json